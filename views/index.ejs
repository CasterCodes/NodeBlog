

<div class="col-md-10 mx-auto mt-3">
    <% posts.forEach(post => { %>
            <div class="card card-body my-3">
                  <h3><%= post.title %></h3>  
                  <span class="text-muted">Post Created by : <%= post.author%> On <strong><%= post.createdOn.toLocaleDateString()%></strong></span>
                  <p><%- post.markdown %></p>
                  <div class="row">
                        <div class="col-md-6 mr-auto">
                           <a href="/edit/<%= post._id %>" class="btn btn-info">Edit</a>
                            <form action="/delete/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                                  <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <div class=" ml-auto">
                           <a href="/single/<%= post.slug %>" class="btn btn-info">Read More</a>
                      </div>
                  </div>
                
            </div>
    <% }) %>
</div>

